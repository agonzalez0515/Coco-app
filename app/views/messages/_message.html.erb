<div class="message">

  <p><strong><%= message.title %></strong></p>
  <p><%= message.body %></p>

  <% if current_user && current_user.id == message.user_id %>
  <p>
    <%= link_to 'Delete Review', [review.recipe, review],
    method: :delete,
    data: { confirm: 'Are you sure?' } %>
  </p>
  <% end %>

  <h2>Comments</h2>
  <%= render message.comments %>

  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>

</div>
