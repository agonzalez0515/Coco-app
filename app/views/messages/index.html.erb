<div class="messages-index">
  <h2>CoCo Forums</h2>

  <h4>Discuss schools, scholarships, the application process and more!</h4>
  <td id="search-field" colspan=2>
    <hr>
    <div class="input-field" style="width:50%; display:block; text-align:center;">
      <form class="form input-field" action="/messages/search" method="post" style="display:inline-block; text-align:center;">
        <input type="text" name="message_string" placeholder="Search forum by content..." style="display:inline-block; text-align:center;">
        <input class="btn" type="submit" name="submit" value = "Search">
      </form>
    </div>
  <hr>
  <div id="topic-tabs" class="row">
    <div id="general-tab" class="col s3"><input class="btn col s12" type="submit" name="submit" value = "General"></div>
    <div id="sat-prep-tab" class="col s3"><input class="btn col s12" type="submit" name="submit" value = "SAT Preparation"></div>
    <div id="fin-aid-tab" class="col s3"><input class="btn col s12" type="submit" name="submit" value = "Financial Aid"></div>
    <div id="college-disc-tab" class="col s3"><input class="btn col s12" type="submit" name="submit" value = "College Talk"></div>
  </div>
  <div class="row">
    <div class="col s4">
      <h5>Topic</h5>
    </div>
    <div class="col s8">
      <h5>Most Recent Reply</h5>
    </div>
  </div>
    <% @messages.each do |message| %>
      <div class="row">
        <div class="col s4" style="">
          <h5><%= link_to message.title, message_comments_path(message) %></h5>
        </div>
        <div class="col s8" style="padding-top:16px;">
          <% last_comment = message.comments.last %>
          <% if last_comment %>
            <p class="light"><%= last_comment.body %></p>
          <% else %>
            No responses yet...
          <% end %>
        </div>
      </div>

      <div class="container">

      </div>
      <p>

      </p>
    <% end %>
    <form action="/messages/new" method="get">
      <input type="submit" value="Add a Topic" class="waves-effect waves-light btn">
    </form>
</div>
