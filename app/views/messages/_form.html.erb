<%= form_for @message do |f| %>

  <% if @errors %>
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col s8 offset-s2">
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col s8 offset-s2">
      <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col s10 offset-s1">
      <p>
        <% @topics.each do |topic| %>
        <%= f.radio_button(:topic_id, topic.id) %>
        <%= f.label(:topic_id, topic.title.upcase, :value=> topic.id) %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col s2 offset-s5">
      <p>
        <button class="btn waves-effect waves-light" type="submit" name="action">Post Topic
        </button>
      </p>
    </div>
  </div>
<% end %>
