<ul>
<% if current_user.events.length == 0 %>
  <p> You have no upcoming events.</p>
<% else %>
  <% current_user.events.reorder("id").each do |event| %>
    <li>
      <b>Title:</b> <%= link_to event.title, user_event_path(current_user.id, event.id) %>
        <li><b>Date:</b> <%= event.sat.date.strftime('%A %b %e %Y') %></li>
        <li><b>Location:</b> <%= event.sat.location_name.titlecase %></li>
        <li><b>Address:</b> <%= event.sat.address %></li>
    </li><br>
  <% end %>
<% end %>
</ul>